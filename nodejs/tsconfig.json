{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "strict": true,
        "noEmitOnError": false,
        "noUnusedLocals": true,
        "strictPropertyInitialization": false,
        "downlevelIteration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "skipLibCheck": true
    },
    "include": [
        "src"
    ]
}